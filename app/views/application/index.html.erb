    </div>
    <div class="fade-img-box2">
      <%=image_tag '1', class:'screen-shot'%>
      <%=image_tag '2', class:'screen-shot'%>
      <%=image_tag '3', class:'screen-shot'%>
      <%=image_tag '4', class:'screen-shot'%>
      <%=image_tag '5', class:'screen-shot'%>
    </div>
</div>
<style>
.inner-block {
  display:flex;
  margin: 0 auto;
  justify-content: center;
}
.fade-img-box, .fade-img-box1, .fade-img-box2 {
  width:450px;
  height:350px;
  margin-top: 10px;
  position:relative;
}
.screen-shot{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit:cover;
}

</style>
<script>
 (function(){
 // 設定
 var interval =3000; // 切り替わりの間隔（ミリ秒）
 var fade_speed = 1000;// フェード処理の早さ（ミリ秒）
 $(".screen-shot").hide();
 $(".fade-img-box img").eq(0).addClass("active").show();
 $(".fade-img-box1 img").eq(1).addClass("active").show();
 $(".fade-img-box2 img").eq(2).addClass("active").show();
 
 var changeImage = function(prefix){
 		var $active = $(prefix + " img.active");
 		var $next = $active.next("img").length?$active.next("img"):$(prefix + " img:first");
    
 		$active.fadeOut(fade_speed).removeClass("active");
 		$next.fadeIn(fade_speed).addClass("active");
 }
 setInterval(changeImage,interval, ".fade-img-box" );
 setInterval(changeImage,interval, ".fade-img-box1" );
 setInterval(changeImage,interval, ".fade-img-box2" );
 }());
</script>
